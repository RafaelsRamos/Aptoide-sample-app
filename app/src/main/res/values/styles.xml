<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar_style">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="section_title_style">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="section_more_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/medium_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/more</item>
    </style>

    <style name="editor_choice_name_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editor_choice_rating_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="local_top_apps_name_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="local_top_apps_rating_style">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="no_internet_connection_style">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>